@page "/product/create"
@using BlazorApp.Data
@inject ProductService ProductService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Thêm sản phẩm</h3>

<EditForm Model="@product" OnValidSubmit="AddProduct">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-12 col-md-12 mb-3">
            <label class="form-label">Tên sản phẩm</label>
            <InputText class="form-control" @bind-Value="product.Name" />
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Giá</label>
            <InputNumber class="form-control" @bind-Value="product.Price" />
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Số lượng</label>
            <InputNumber class="form-control" @bind-Value="product.Soluong" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <InputTextArea class="form-control" @bind-Value="product.Mota" />
    </div>

    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Tác giả</label>
            <InputText class="form-control" @bind-Value="product.Tentacgia" />
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Nhà xuất bản</label>
            <InputText class="form-control" @bind-Value="product.Nxb" />
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Mã Code</label>
            <InputText class="form-control" @bind-Value="product.Code" />
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Thể loại</label>
            <InputText class="form-control" @bind-Value="product.Theloai" />
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Ngày xuất bản</label>
            <InputDate class="form-control" @bind-Value="product.Ngayxb" />
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Số trang</label>
            <InputText class="form-control" @bind-Value="product.Sotrang" />
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Tình trạng</label>
            <select class="form-control" @bind="product.Tinhtrang">
                <option value="">Chọn tình trạng</option>
                <option value="published">Còn hàng</option>
                <option value="draft">Hết hàng</option>
            </select>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label class="form-label">Tái bản</label>
            <InputText class="form-control" @bind-Value="product.Taiban" />
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Thêm sản phẩm</button>
    <button class="btn btn-secondary ms-2" @onclick="Cancel">Hủy</button>

</EditForm>

@if (message != null)
{
    <p class="alert alert-success">@message</p>
}

@code {
    private Product product = new Product();
    private string? message;
    private async Task AddProduct()
    {
        if (string.IsNullOrEmpty(product.Name))
        {
            message = "Vui lòng điền đầy đủ thông tin!";
            return;
        }

        // Add product using the service
        await ProductService.AddProductAsync(product);

        // Success message
        message = "Sản phẩm đã được thêm thành công!";
        product = new Product(); // Reset form
        StateHasChanged();

        // Navigate to product list after a brief delay
        await Task.Delay(1000);
        Navigation.NavigateTo("/products");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/products");
    }
}